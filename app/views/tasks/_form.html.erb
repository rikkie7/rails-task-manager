<%= form_for(task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>

  <% if !task.new_record? %>
    <div class="form-check">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, class: "form-check-label" %>
    </div>
     <%= f.submit "Update task", class: "btn btn-primary" %>
  <% else %>
      <%= f.submit "create task", class: "btn btn-primary" %>
  <% end %>


<% end %>
