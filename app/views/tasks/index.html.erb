<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task|%>
  <div class="d-flex">
    <li class="pe-2">
      <input type="checkbox" <%=task.completed ? "checked": ""%>>
      <label for=<%task.id%>><%=link_to task.title, task_path(task)%></label><br>
    </li>
   <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
   </div>
  <%end%>
</ul>

<%=link_to "Add a new task", tasks_new_path %>
